<?import javafx.scene.control.PasswordField?>
<VBox fx:controller="client.sample.Controller" xmlns:fx="http://javafx.com/fxml" alignment="center">
    <stylesheets><URL value="@/client/css/Style.css"/></stylesheets>

    <HBox fx:id="upperPanel">
        <TextField HBox.hgrow="ALWAYS" promptText="Логин" fx:id="loginField"/>
        <PasswordField promptText="Пароль" fx:id="passwordField" onAction="#tryToAuth"/>
        <Button text="Авторизоваться" onAction="#tryToAuth"/>
    </HBox>


    <TextArea fx:id="textArea" editable="false" VBox.vgrow="ALWAYS"/>
    <HBox fx:id="bottomPanel" managed="false" visible="false">
        <TextField fx:id="textField" HBox.hgrow="ALWAYS" promptText="Введите текст сообщения" onAction="#sendMsg"/>
        <Button fx:id="smButton" text="SEND >" onAction="#sendMsg"/>
    </HBox>
</VBox>
